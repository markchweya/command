{
  "manifest_version": 3,
  "name": "Command Bridge",
  "version": "1.0",

  "permissions": ["activeTab"],

  "host_permissions": [
    "https://chatgpt.com/*",
    "http://localhost:8787/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ]
}
